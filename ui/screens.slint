export component ControlScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback target-changed(float);
    callback mode-changed(string);
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Cycle Control";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            VerticalLayout {
                padding: 24px;
                spacing: 32px;
                alignment: center;
                
                VerticalLayout {
                    spacing: 8px;
                    alignment: center;
                    
                    Text {
                        text: "Current Cycle";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    HorizontalLayout {
                        alignment: center;
                        spacing: 4px;
                        
                        Text {
                            text: data.current-cycle;
                            font-size: 64px;
                            font-weight: 300;
                            color: white;
                        }
                        
                        Text {
                            text: "";
                            font-size: 24px;
                            color: #9E9E9E;
                            vertical-alignment: bottom;
                        }
                    }
                }
                
                Rectangle {
                    height: 1px;
                    background: #424242;
                }
                
                VerticalLayout {
                    spacing: 16px;
                    alignment: center;
                    
                    Text {
                        text: "Select Cycle";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    ValueStepper {
                        value <=> data.selected-cycle;
                        min: 0;
                        max: 8;
                        step: 1;
                        unit: "";
                        
                        changed(val) => { target-changed(val); }
                    }
                }

                HorizontalLayout {
                    alignment: center;
                    spacing: 8px;
                    
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "normal" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("normal"); }
                        }
                        
                        Text {
                            text: "Normal";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "delicate" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("delicate"); }
                        }
                        
                        Text {
                            text: "Delicate";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "heavy" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("heavy"); }
                        }
                        
                        Text {
                            text: "Heavy Duty";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "quick" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("quick"); }
                        }
                        
                        Text {
                            text: "Quick Wash";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
